<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/colorButton</item>
    </style>

    <style name="TeamNameTextView" parent="AppTheme">
        <item name="android:textSize">@dimen/team_font_size</item>
        <item name="android:textColor">@color/teamFontColor</item>
        <item name="android:layout_margin">@dimen/team_name_margin_vertical</item>
    </style>

    <style name="ScoreTextView">
        <item name="android:textSize">@dimen/score_font_size</item>
        <item name="android:textColor">@color/scoreColor</item>
    </style>

    <style name="CardTextView">
        <item name="android:textSize">@dimen/card_text_size</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:background">#000</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_width">@dimen/dividers_thickness</item>
        <item name="android:layout_height">match_parent</item>

    </style>

    <style name="VerticalDividerForLandscapeView">
        <item name="android:background">#000</item>
        <item name="android:layout_width">@dimen/dividers_thickness</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="scoreButtons">
        <item name="android:layout_marginLeft">@dimen/score_button_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/score_button_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/score_button_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/score_margin_bottom_vertical</item>
    </style>


</resources>
